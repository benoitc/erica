{application, erica,
 [{description, "erica: Couchdb Application Tool"},
  {vsn, "0.5.0"},
  {modules, []},
  {registered, []},
  {applications, [kernel, stdlib, crypto, lager, sasl, asn1, public_key, ssl,
                    inets, idna, hackney, mochiweb]},
  {include_applications, [hackney_lib]},

  {env, [
    %% default log level
    {log_level, error},

    %% list of commands modules
    {modules, [
        erica_init,
        erica_push,
        erica_clone,
        erica_templater,
        erica_webbrowser,
        erica_web]}
  ]}]}.
